<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:contentDescription="@string/backgroundimage"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/txtAppTitle"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="500dp"
        android:fontFamily="cursive"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="#FFDF5BC5"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:text="@string/art_shop"
        android:textAlignment="center"
        android:textColor="@color/MyFinalApp_txtColor"
        android:textSize="60sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <LinearLayout
        android:id="@+id/categoriesLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/firstCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="@string/painting"
                android:textAlignment="center"
                android:textColor="@color/MyFinalApp_txtColor"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageViewPainting"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/painting"
                android:onClick="StartPaintingActivity"
                app:srcCompat="@drawable/painting"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/thirdCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="@string/pottery"
                android:textAlignment="center"
                android:textColor="@color/MyFinalApp_txtColor"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageViewPottery"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/pottery"
                android:onClick="StartPotteryActivity"
                app:srcCompat="@drawable/pottery"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/secondCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="@string/knitting"
                android:textAlignment="center"
                android:textColor="@color/MyFinalApp_txtColor"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/imageViewKnitting"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/knitting"
                android:onClick="StartKnittingActivity"
                app:srcCompat="@drawable/knitting"
                tools:ignore="DuplicateSpeakableTextCheck" />


            <TextView
                android:id="@+id/forthCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:text="@string/Embroidery"
                android:textAlignment="center"
                android:textColor="@color/MyFinalApp_txtColor"
                android:textSize="18sp"
                android:textStyle="bold|italic" />


            <ImageView
                android:id="@+id/imageViewEmbroidery"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/Embroidery"
                android:onClick="StartEmbroideryActivity"
                app:srcCompat="@drawable/embroidery"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtHomePage"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="@string/here_is_my_website"
        android:textAlignment="center"
        android:textColor="@color/MyFinalApp_txtColor"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAppTitle"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>